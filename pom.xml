        <maven.compiler.target>21</maven.compiler.target>
        <cucumber.version>7.4.1</cucumber.version>
        <testng.version>7.4.0</testng.version>
        <selenium-java.version>4.1.4</selenium-java.version>
        <browserstack-local-java.version>1.0.6</browserstack-local-java.version>
        <json-simple.version>1.1.1</json-simple.version>
        <browserstack-java-sdk.version>LATEST</browserstack-java-sdk.version>
        <surefire.plugin.version>3.0.0-M5</surefire.plugin.version>
        <rest-assured.version>5.3.0</rest-assured.version>
        <aws-java-sdk.version>1.12.370</aws-java-sdk.version>
        <webdrivermanager>5.4.1</webdrivermanager>
        <google-api-client.version>2.1.1</google-api-client.version>
        <google-api-services-gmail.version>v1-rev20221219-2.0.0</google-api-services-gmail.version>
        <google-oauth-client-jetty.version>1.34.1</google-oauth-client-jetty.version>
        <allure-cucumber4-jvm.version>2.13.0</allure-cucumber4-jvm.version>
        <allure-rest-assured.version>2.20.1</allure-rest-assured.version>
        <slack-api-client>1.27.2</slack-api-client>
        <zip4j.version>2.11.3</zip4j.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.cucumber</groupId>
            <artifactId>cucumber-java</artifactId>
            <version>${cucumber.version}</version>
            <scope>test</scope>
