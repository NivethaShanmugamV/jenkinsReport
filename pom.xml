                            <testFailureIgnore>true</testFailureIgnore><!--suppress UnresolvedMavenProperty -->
                            <argLine>-javaagent:"${com.browserstack:browserstack-java-sdk:jar}"</argLine><!--suppress UnresolvedMavenProperty -->
